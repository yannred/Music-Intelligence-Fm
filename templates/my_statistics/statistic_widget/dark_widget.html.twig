{# Main content #}
<div class="inline-block h-28 bg-stone-900 rounded-lg border border-gray-500 p-1 flex flex-col" style="width: 100px;">

  {# Up or Down percent Icon  #}
  <span class="relative float-right">
    {% if progress is defined %}
        <div class="text-right w-3/5 absolute -top-1.5 right-0">
          <span class="rounded-full bg-stone-800 text-stone-400 border border-gray-500 text-2xs">
            {% include 'base/icon/svg-icon.html.twig' with {'icon' : progressType, 'style' : 'width: 14px; padding-bottom: 2px; margin-bottom: 2px;'} %}<span class="bold">{{ progress }}</span>
          </span>
        </div>
      {% endif %}
  </span>

  {# Title on top #}
  <div class="flex">
    <div class="bold !text-xs mt-1 mb-0.5">{{ title }}</div>
    <div class="mx-auto"></div>
  </div>

  {# Main part #}
  <div class="my-auto"></div>
  <div class="text-center"><span class="text-2xl bold">{{ value }}</span></div>
  <div class="my-auto"></div>

  {# Subtext on bottom #}
  <div class="text-stone-400 text-2xs">{{ subText }}</div>

</div>