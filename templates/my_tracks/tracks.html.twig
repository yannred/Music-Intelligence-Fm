<div class="container text-center">
  <div class="row">

    {% for track in tracks %}
      <div class="col mb-3">
        <div class="card" style="width: 18rem;">
          {% for image in track.image %}
            {% if image.size == 3 %}
              {% if userPlaycount is defined and userPlaycount == 1 %}
                <span>{{ track.userPlaycount }} scrobbles</span>
              {% endif %}
              <img src="{{ image.url }}" class="card-img-top" alt='{{ track.name }}' style="width: 286px">
            {% endif %}
          {% endfor %}
          <div class="card-body">
            <h5 class="card-title">{{ track.name }}</h5>
            {#          <p class="card-text">{{ track.bioSummary|u.truncate(150, ' ...') }}</p> #}
            <a href="#" class="btn btn-primary">More</a>
          </div>
        </div>
      </div>


    {% endfor %}
  </div>

  <div class="row">
    <div class="col">
      {% if pagination is defined and pagination == 1 %}
        {{ knp_pagination_render(tracks) }}
      {% endif %}
    </div>
  </div>

</div>
