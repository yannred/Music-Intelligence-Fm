<div class="max-w-md bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">

  <div class="flex p-3">

    <div class="inline-block text-white w-1/2 mt-2">

      <a href="#" class="inline-block"><img class="rounded-full m-2" src="{{ image }}" alt="{{ title }}"/></a>

    </div>

    <div class="inline-block text-white m-2 w-1/2">

      <div class="text-center"><h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white inline-block">{{ title }}</h5></div>

      <div class="p-2">
        <ul class="">
          <li class="p-1">
            {% include 'base/icon/svg-icon.html.twig' with {'icon' : 'scrobble'}%}
            {{ userPlaycount }} scrobbles
          </li>
          <li class="p-1">
            {% include 'base/icon/svg-icon.html.twig' with {'icon' : 'album'}%}
            {{ totalAlbum }} album listened
          </li>
          <li class="p-1">
            {% include 'base/icon/svg-icon.html.twig' with {'icon' : 'track'}%}
            {{ totalTrack }} tracks listened
          </li>
        </ul>
      </div>

    </div>

  </div>

  <div class="px-4">
    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{ content|u.truncate(150, ' ...') }}</p>
    <div class="inline-block text-right w-full py-4">
      <a href="#"
       class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-red-700 rounded-lg hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800">
        {{ button }}
        <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
      </a>
    </div>
  </div>

</div>
