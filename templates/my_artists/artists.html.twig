{% set nb = 0 %}

<div class="container text-center">

  {% for artist in artists %}

  {% if nb == 0 %}
  <div class="row">
    {% endif %}

    <div class="col mb-3">
      <div class="card" style="width: 18rem;">
        {% for image in artist.image %}
          {% if image.size == 3 %}
            {% if userPlaycount is defined and userPlaycount == 1 %}
              <span>{{ artist.userPlaycount }} scrobbles</span>
            {% endif %}
            <img src="{{ image.url }}" class="card-img-top" alt='{{ artist.name }}' style="width: 286px">
          {% endif %}
        {% endfor %}
        <div class="card-body">
          <h5 class="card-title">{{ artist.name }}</h5>
          <p class="card-text">{{ artist.bioSummary|u.truncate(150, ' ...') }}</p>
          <a href="#" class="btn btn-primary">More</a>
        </div>
      </div>
    </div>

    {% if nb == 2 %}
      {% set nb = 0 %}
    {% else %}
      {% set nb = nb + 1 %}
    {% endif %}

    {% endfor %}

    {% if pagination is defined and pagination == 1 %}
      {{ knp_pagination_render(artists) }}
    {% endif %}


  </div>


</div>
