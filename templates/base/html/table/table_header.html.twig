<div class="flex flex-col px-4 py-3 space-y-3 lg:flex-row lg:items-center lg:justify-between lg:space-y-0 lg:space-x-4">

  {# left block #}
  <div class="flex items-center space-x-4 absolute my-2">
    {% if tableHeaderCaption is defined %}
      {% for item in tableHeaderCaption %}
        <h5>
          <span class="text-gray-500">{{ item.wording }}</span>
          <span class="dark:text-white">{{ item.data }}</span>
        </h5>
      {% endfor %}
    {% endif %}
  </div>

  {# center block #}
  {% if pagination is defined and pagination != false %}
    <div class="flex-auto items-center justify-center">
      {{ knp_pagination_render(pagination) }}
    </div>
  {% endif %}


  {# right block #}
  <div class="flex flex-col flex-shrink-0 space-y-3 md:flex-row md:items-center lg:justify-end md:space-y-0 md:space-x-3 absolute right-5 top-1">
    {% if exportButton is defined %}
      <button type="button" class="flex items-center justify-center flex-shrink-0 px-3 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg focus:outline-none hover:bg-gray-100 hover:text-primary-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">
        <svg class="w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="2" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5m-13.5-9L12 3m0 0l4.5 4.5M12 3v13.5" />
        </svg>
        Export
      </button>
    {% endif %}
  </div>
</div>