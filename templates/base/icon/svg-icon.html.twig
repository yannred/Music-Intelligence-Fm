{% if width is defined %}
  {% set style = 'width: ' ~ width ~ 'px;'%}
{% elseif not style is defined %}
  {% set style = '' %}
{% endif %}

{% if width is defined %}
  {% set style = 'width: ' ~ width ~ 'px;!important'%}
{% elseif not style is defined %}
  {% set style = '' %}
{% endif %}

{% if not class is defined %}
  {% set class = ''%}
{% endif %}

{% if not alt is defined %}
  {% if icon == 'album' %}
    {% set alt = 'Number of different albums you have listened to' %}
  {% elseif icon == 'track' %}
    {% set alt = 'Number of different tracks you have listened to' %}
  {% elseif icon == 'scrobble' %}
    {% set alt = 'Number of scrobbles' %}
  {% else %}
    {% set alt = '' %}
  {% endif %}
{% endif %}

<img src="{{ asset('imgs/icon-' ~ icon ~ '.svg') }}" class="{{ class }} icon-svg inline-block" title="{{ alt }}" style="{{ style }}">