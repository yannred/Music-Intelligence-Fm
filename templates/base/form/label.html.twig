{% if not input.vars.attr.class is defined %}
  {% set class = ""  %}
  {% else %}
  {% set class = input.vars.attr.class  %}
{%  endif %}

{% if not input.vars.attr.style is defined %}
  {% set style = ""  %}
{% else %}
  {% set style = input.vars.attr.style  %}
{%  endif %}

{% if not visibility is defined %}
  {% set visibility = ""  %}
{%  endif %}

<div class="d-flex align-items-center">
  <label
    for="{{ input.vars.id }}"
    class="form-label-sm mx-2 {{ class }} {{ input.vars.required ? 'required' }} {{ visibility }}"
    style="{{ style }}"
  >
    {{ field_label(input) }}
  </label>
</div>