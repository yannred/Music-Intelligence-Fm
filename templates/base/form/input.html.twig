{% if not input.vars.attr.class is defined %}
  {% set class = ""  %}
{% else %}
  {% set class = input.vars.attr.class  %}
{%  endif %}

{% if not input.vars.attr.style is defined %}
  {% set style = ""  %}
{% else %}
  {% set style = input.vars.attr.style  %}
{%  endif %}

{% if not input.vars.attr.onchange is defined %}
  {% set onchange = ""  %}
{% else %}
  {% set onchange = input.vars.attr.onchange  %}
{%  endif %}

{% if not visibility is defined %}
  {% set visibility = ""  %}
{%  endif %}

{% if not size is defined %}
  {% set size = "" %}
{%  endif %}

<input
  type="{{ input.vars.type is defined ? input.vars.type : 'input'}}"
  id="{{ input.vars.id }}" name="{{ field_name(input) }}"
  style="{{ style }}"
  size="{{ size }}"
  class="{{ class }} {{ visibility }} bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
  {{ input.vars.required ? 'required="required"' }}
/>
{{ form_help(input) }}{{ form_errors(input) }}

