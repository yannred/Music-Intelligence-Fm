{% if not input.vars.attr.class is defined %}
  {% set class = ""  %}
{% else %}
  {% set class = input.vars.attr.class  %}
{%  endif %}

{% if not input.vars.attr.style is defined %}
  {% set style = ""  %}
{% else %}
  {% set style = input.vars.attr.style  %}
{%  endif %}

{% if not input.vars.attr.onchange is defined %}
  {% set onchange = ""  %}
{% else %}
  {% set onchange = input.vars.attr.onchange  %}
{%  endif %}

{% if not visibility is defined %}
  {% set visibility = ""  %}
{%  endif %}

{% if not size is defined %}
  {% set size = "" %}
{%  endif %}

{% if not type is defined %}
  {% if input.vars.type is defined %}
    {% set type = input.vars.type %}
  {% else %}
    {% set type = "text" %}
  {%  endif %}
{%  endif %}

<input
  type="{{ type }}"
  id="{{ input.vars.id }}"
  name="{{ field_name(input) }}"
  style="{{ style }}"
  size="{{ size }}"
  class="{{ class }} {{ visibility }} bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-red-500 focus:border-red-500 block w-full p-1.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
  value="{{ input.vars.value is defined ? input.vars.value : '' }}"
  {{ input.vars.required ? 'required="required"' }}
/>
<span class="text-red-800">{{ form_help(input) }}{{ form_errors(input) }}</span>

