{% if not activeNavbarItem is defined %}
  {% set activeNavbarItem = '' %}
{% endif %}

<nav class="bg-white dark:bg-gray-800 fixed w-full z-20 top-0 start-0 border-b border-gray-200 dark:border-gray-600 sticky">
