{% extends 'base.html.twig' %}

{% block title %}My Page{% endblock %}

{% block body %}
  {% include 'base/html/page-title.html.twig' with {'title': 'Your Page'} %}
  <hr class="mb-8" />

  <div>
    {% include 'my_page/userCard.html.twig' %}
  </div>

  <div>
    <h2 style="display: inline-block">Last scrobbles</h2><span style="margin-left: 50px"><a href="/myPage/myScrobbles">See more</a></span>
    {% include 'my_scrobbles/my_scrobbles.html.twig' with {'thead' : myScrobblesThead, 'tbody': scrobbles, 'tbodyUrl' : myScrobblesTbodyUrl} %}
  </div>

  <div>
    <h2 style="display: inline-block">Top tracks</h2><span style="margin-left: 50px"><a href="/myPage/myTracks">See more</a></span>
    {% include 'my_tracks/tracks.html.twig' with {'thead' : myTracksThead, 'tbody': scrobbles, 'tbodyUrl' : myTracksTbodyUrl} %}
  </div>

  <div>
    <h2 style="display: inline-block">Top artists</h2><span style="margin-left: 50px"><a href="/myPage/myArtists">See more</a></span>
    {% include 'my_artists/artists.html.twig' %}
  </div>

  <div>
    <h2 style="display: inline-block">Top albums</h2><span style="margin-left: 50px"><a href="/myPage/myAlbums">See more</a></span>
    {% include 'my_albums/albums.html.twig' %}
  </div>



{% endblock %}